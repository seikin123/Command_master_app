  <div class="container">
    <h3>コマンド選択</h3>
    <div class="row">
        <% @categories.each do |category| %>
      <div class="col-lg-4">
        <div class="shadow card" style="width: 20rem;">
            <%= attachment_image_tag category, :category_image, size: "200x200", fallback: "no_image.jpg", class:"card-img-top"  %>
          <div class="card-body">
            <h4 class="card-title"><%= category.name %></h4>
            <p class="card-text"></p>
            <%= link_to "コマンド一覧へ", command_path(category.id), class:"btn btn-primary"%>
          </div>
        </div>
      </div>
     <% end %>
    </div>
  </div>
  

  <%= javascript_include_tag 'like.js' %>