<h1>ユーザー情報編集</h1>

<%= form_with model:@user, local:true do |f| %>


<%= f.label :"名前", class:"form-label" %>
<%= f.text_field :name, class:"form-control" %>

<%= f.label :"プロフィール画像", class:"form-label" %>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class:"form-control-file user_image" %>

<%= f.submit "変更を保存", class: "btn btn-secondary" %>

<%= link_to "退会する", unsubscribe_users_path, class: "btn btn-danger" %>

<% end %>
