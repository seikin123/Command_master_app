<div class="card" style="width: 40rem; height: 30rem;">
  <div class="container">
    <!--<div class="row">-->
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>ユーザー情報編集</h2>
  
        <%= form_with model:@user, local:true do |f| %>
          <%= render 'layouts/errors', obj: @user %>
          
          <div class="form-group">
            <%= f.label :"名前", class:"form-label" %>
            <%= f.text_field :name, class:"form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :"プロフィール画像", class:"form-label" %>
            <%= f.attachment_field :profile_image, placeholder: "", class:"form-control-file user_image" %>
          </div>
          
          <div class="form-group">
            <%= f.submit "変更を保存", class: "btn btn-secondary" %>
            <%= link_to "退会する", unsubscribe_users_path, class: "btn btn-danger" %>
          </div>
        <% end %>
    <!--</div>    -->
  </div>
</div>