<div class="card" style="width: 40rem; height: 30rem;">
  <div class="container">
    <!--<div class="row">-->
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2 class="font">Category-Edit</h2>
<!--<= render 'customers/shared/error_messages', resource: @category %>-->
        <%= form_with model: [:admin, @category], local:true do |f| %>
          

          <div class="form-group">
            <%= f.label :"名前", class:"form-label" %>
            <%= f.text_field :name, placeholder: "ジャンル名", size: "30", class: "form-control mr-3" %>
          </div>

          <div class="form-group">
            <%= f.label :"プロフィール画像", class:"form-label" %>
            <%= f.attachment_field :category_image %>
          </div>

          <div class="form-group">
            <%= f.submit "変更を保存", class: "btn btn-secondary" %>
          </div>
        <% end %>
    <!--</div>    -->
  </div>
</div>

