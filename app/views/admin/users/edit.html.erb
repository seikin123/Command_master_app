<p id="notice"></p>
<div class="container">
  <div class="row">
    <h3 class="mt-5"><%= "#{"ID." + @user.id.to_s + "" + @user.name}のEdit" %></h3>
    <%= render 'users/shared/error_messages', resource: @user %>
  </div>

<%= form_with model: @user, url: admin_user_path, local:true do |f| %>
    <table class="my-3 new-customer">
      
          <td><%= f.label :"Name", class:"form-label" %></td>
            <td>
              <div class="form mb-3">
                <%= f.text_field :name, class:"form-control" %>
              </div>
            </td>
        </tr>
        <tr>
          <td><%= f.label :"Email", class:"form-label" %></td>
            <td>
              <div class="form mb-3">
                <%= f.text_field :email, class:"form-control" %>
              </div>
            </td>
        </tr>
        <tr>
          <td><%= f.label :"Status", class: "control-label" %></td>
            <td>
              <%= f.radio_button :is_acive, true, checked: true %>
              <%= f.label :is_acive, "有効", class: "mr-3"%>
              <%= f.radio_button :is_acive, false %>
              <%= f.label :is_acive, "退会" %>
            </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <div class="form-group mt-5 mb-3">
              <%= f.submit "変更を保存", class: "btn btn-success" %>
            </div>
            <% end %>
          </td>
        </tr>
  </table>
</div>