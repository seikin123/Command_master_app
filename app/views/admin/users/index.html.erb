<div class="bacimage">
  <div class="title-box">
    <p id="notice"></p>
    <div class="container">
      <div class="title-box">
        <h4 class="title-text">ユーザー一覧</h4>
      </div>

      <div class="btnripple">
        <div class="date">
          <table class="table table-striped shadow p-3 mb-5 bg-white rounded">
            <thead>
              <tr>
                <th>ユーザーID</th>
                <th>名前</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= link_to user.name, admin_user_path(user) %></td>
                <td><%= user.email %></td>
              <td>
              <% if user.is_active == true %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-secondary">退会済</span>
              <% end %>
              </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <!--<div class="row justify-content-center"><= paginate @users %></div>-->
    </div>
  </div>
</div>