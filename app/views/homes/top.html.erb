<div class"container">
    <div class="jumbotron">
      <div class="container">
        <h1 class="command">Command-Master</h1>
        <% if user_signed_in? %>
         <%= link_to "S T A R T", questions_path, class:"btn btn-primary btn-lg"%>
        <% else %>
          <%= link_to 'ゲストで始める', users_guest_sign_in_path, method: :post, class:"btn btn-primary btn-lg" %>
        <% end %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-md-6">
        <div class="card flex-md-row mb-4 shadow-sm h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <span class="d-inline-block mb-2 text-primary"></span>
              <h4 class="mb-0">実践モード<br>
                色々なショートカットキーやコマンドを
                               ゲーム感覚で学ぶことができます。</h4>
              <div class="mb-1 text-muted">
                <p class="card-text mb-auto"><%= link_to "Challenge", categories_path, class:"btn btn-primary btn-lg" %></p>
              </div>
            </div>
          <%= image_tag('top-1.png', class:"card-img-right flex-auto d-none d-lg-block", style:"width: 300px; height: 250px;") %>
          </img>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card flex-md-row mb-4 shadow-sm h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <span class="d-inline-block mb-2 text-primary"></span>
              <h4 class="mb-0">Command-List<br>
                               <p>コマンド一覧</p>
                               忘れがちなコマンドも
                               BookMarkしておきましょう</h4>
              <div class="mb-1 text-muted">
                <p class="card-text mb-auto"></p>
              </div>
            </div>
           <%= image_tag('top-2.png', class:"card-img-right flex-auto d-none d-lg-block", style:"width: 300px; height: 250px;") %>
          </img>
        </div>
      </div>
    </div>
